# ============================================================================
# AI Service Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Make sure to keep .env in .gitignore

# ----------------------------------------------------------------------------
# OpenAI Configuration (REQUIRED)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
OPENAI_MODEL=gpt-4o-mini

# ----------------------------------------------------------------------------
# AI Service Settings
# ----------------------------------------------------------------------------
# Minimum confidence threshold for AI categorization (0.0 - 1.0)
AI_MIN_CONFIDENCE=0.6

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Environment mode
NODE_ENV=development

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
# Port for AI service (default: 8081)
PORT=8081

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MIN=120

# ----------------------------------------------------------------------------
# Backend Integration
# ----------------------------------------------------------------------------
# URL of the main Finaize backend (should match backend's PORT, default: 3000)
BACKEND_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# API Security
# ----------------------------------------------------------------------------
# API key for authenticating requests from backend
API_KEY=dev-key-12345
API_KEYS=dev-key-12345
RATE_LIMIT_PER_MIN=120
LOG_LEVEL=info